
@model AgeFinder

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Birth Year Calculator</h1>
    <form asp-action="Index" method="post">
        <div>
            <label asp-for="UserName">Users Name:</label>
            <input asp-for="UserName" />
        </div>
        <div>
            <label asp-for="BirthYear"> BirthYear:</label>
            <input asp-for="BirthYear" />
        </div>
        
        <div>
            <label>Future Value:</label>
            <input value="@ViewBag.YOB.ToString()" readonly />
        </div>
        <div>
            <button type="submit">Calculate</button>
            <a asp-action="Index">Clear</a>
        </div>
    </form>
</body>
</html>
